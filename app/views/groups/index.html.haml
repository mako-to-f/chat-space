.chat-side
  .chat-side__user
    .chat-side__user-content
      .chat-side__user-name
        = current_user.name
      .chat-side__user-utility
        %a.chat-side__user-utility--new-group
          = link_to new_group_path do
            = fa_icon 'edit', class: 'icon'
        %a.chat-side__user-utility--edit-user
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'
  .chat-side__groups
    .chat-side__groups-list
      .chat-side__group
        - current_user.groups.each do |group|
          = link_to group_messages_path(group) do
            .chat-side__group-name
              = group.name
            .chat-side__group-message
              まだメッセージはありません
